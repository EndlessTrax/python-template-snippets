{
    "New HTML Template": {
		"scope": "html",
		"prefix": "ptnew",
		"body": [
			"{% extends '${1:base.html}' %}",
			"\n",
			"{% block content %}",
			"\t$2",
			"{% endblock content %}",
			"\n",
			"{% block scripts %}",
			"{% endblock scripts %}"
		],
		"description": "Creates the base Jinja / Django template for a new HTML file"
	},

	"Jinja / Django Variable": {
		"scope": "html",
		"prefix": "ptvar",
		"body": [
			"{{ $1 }}$0"
		],
		"description": "Opens variable tags"
	},

	"Template Code Block": {
		"scope": "html",
		"prefix": "ptcode",
		"body": [
			"{% $1 %}$0"
		],
		"description": "Opens code block tags"
	}

}